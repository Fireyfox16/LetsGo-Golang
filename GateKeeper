package main

import (
	"fmt"
	"time"
)

func main() {
	if currentGroet() == "" {
		fmt.Println("Sorry, de parkeerplaats is â€™s nachts gesloten")
	} else {
		fmt.Println(currentGroet() + "! Welkom bij Fonteyn Vakantieparken")
	}
}

func currentGroet() string {
	var groet string
	currentHour := time.Now().Hour()
	switch {
	case 7 <= currentHour && currentHour < 12:
		groet = "Goedemorgen"
	case 12 <= currentHour && currentHour < 18:
		groet = "Goedemiddag"
	case 18 <= currentHour && currentHour < 23:
		groet = "Goedenavond"
	}
	return groet
}
